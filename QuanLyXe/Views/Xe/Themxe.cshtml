@model QuanLyXe.Models.XE

@{
    ViewBag.Title = "Themxe";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm("Themxe", "Xe", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thêm xe</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div class="form-horizontal form-label-left input_mask">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Chọn loại xe:</div>
                        <div class=col-md-4 col-sm-4 col-xs-12">
                            @Html.DropDownList("MaLX", null, new { @class = "form-control" })
                        </div>
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Biển số xe:</div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            @Html.EditorFor(model => model.BIENSO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BIENSO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Nhãn hiệu:</div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            @Html.EditorFor(model => model.NHANHIEU, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NHANHIEU, "", new { @class = "text-danger" })
                        </div>
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Hộp số:</div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            @Html.EditorFor(model => model.HOPSO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HOPSO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Hạn lưu hành:</div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <input class="date-picker form-control" name="hanluuhanh" required="required" type="date">
                        </div>
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Hạn bảo hiểm:</div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <input class="date-picker form-control" name="hanbaohiem" required="required" type="date">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Nhiên liệu:</div>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            @Html.EditorFor(model => model.NHIENLIEU, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NHIENLIEU, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2 col-sm-2 col-xs-12">Hình xe:</div>
                        <div class="col-md-10 col-sm-10 col-xs-12">
                            <input type="file" name="fileUpload" />
                            <div style="color:red">@ViewBag.Thongbao</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 col-sm-10 col-xs-12">
                            <button class="btn btn-primary" type="reset">Reset</button>
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


