@model IEnumerable<QuanLyXe.Models.spNgaylamtx_Result>

<h3>Các đơn đặt xe</h3>
<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Tên tài xế</th>
            <th>Ngày đi</th>
            <th>Ngày về</th>
            <th>Mã xe</th>
            <th>Nhãn hiệu</th>
            <th>Biển số</th>
            <th>Trạng thái</th>
            <th>Chọn</th>
            <th>Cập nhật</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HOTENTX</td>
                <td>@item.NGAYDI.Value.Day/@item.NGAYDI.Value.Month/@item.NGAYDI.Value.Year</td>
                <td>@item.NGAYVE.Value.Day/@item.NGAYVE.Value.Month/@item.NGAYVE.Value.Year</td>
                <td>@item.MAXE</td>
                <td>@item.NHANHIEU</td>
                <td>@item.BIENSO</td>
                <td style="color:red">@item.TENTRANGTHAI</td>
                <td><input type="radio" class="flat" name="chon" value="@item.MADX"></td>
                <td>
                    <select class="select2_single form-control" tabindex="-1" name="chontt">
                        <option></option>
                        <option value="2">Đang thực hiện</option>
                        <option value="1">Hoàn thành</option>
                    </select>
                    <button type="submit" class="btn btn-success">Lưu</button>
                </td>
            </tr>
        }
    </tbody>
</table>

