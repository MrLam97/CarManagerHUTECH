@model IEnumerable<QuanLyXe.Models.XANGLOP>

@{
    ViewBag.Title = "Xanglop";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Thông tin xăng lốp</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Loại hình</th>
                        <th>Mã xe</th>
                        <th>Địa điểm</th>
                        <th>Ngày thực hiện</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                        <th>Hóa đơn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.LOAIHINH</td>
                            <td style="color:blue;font-weight:bold"><a href="@Url.Action("Chitietxe","Xe",new { id=item.MAXE })">@item.MAXE</a></td>
                            <td>@item.DIADIEM</td>
                            <td>@item.NGAYDO.Value.Day/@item.NGAYDO.Value.Month/@item.NGAYDO.Value.Year</td>
                            <td>@item.SOLUONG</td>
                            <td>@item.TONGTIEN</td>
                            <td>@item.ANHHOADON</td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
    </div>
</div>



