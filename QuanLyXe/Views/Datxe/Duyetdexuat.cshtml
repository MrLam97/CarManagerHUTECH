@model QuanLyXe.Models.ThongtinDatxe

@{
    ViewBag.Title = "Duyetdexuat";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm("Duyetdexuat", "Datxe"))
{
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Duyệt đề xuất</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <dl class="dl-horizontal">
                    <dt>
                        Người đề xuất:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HOTEN)
                    </dd>

                    <dt>
                        Loại xe đề xuất:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TENLOAIXE)
                    </dd>

                    <dt>
                        Ngày đề xuất:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NGAYDX)
                    </dd>

                    <dt>
                        Ngày khởi hành:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NGAYDI.Value.Day)/@Html.DisplayFor(model => model.NGAYDI.Value.Month)/@Html.DisplayFor(model => model.NGAYDI.Value.Year)
                    </dd>

                    <dt>
                        Ngày về:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NGAYVE.Value.Day)/@Html.DisplayFor(model => model.NGAYVE.Value.Month)/@Html.DisplayFor(model => model.NGAYVE.Value.Year)
                    </dd>

                    <dt>
                        Giờ khởi hành:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GIODI)
                    </dd>

                    <dt>
                        Giờ về:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GIOVE)
                    </dd>

                    <dt>
                        Người chủ trì:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CHUTRIDOAN)
                    </dd>

                    <dt>
                        Số lượng đoàn:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SOLUONGDOAN)
                    </dd>

                    <dt>
                        Lộ trình đi:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LOTRINHDI)
                    </dd>

                    <dt>
                        Lộ trình về:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LOTRINHVE)
                    </dd>

                    <dt>
                        Số KM đi:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SOKMDI)
                    </dd>

                    <dt>
                        Số KM về:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SOKMVE)
                    </dd>

                </dl>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                        <button class="btn btn-primary" data-huy="@Model.MADX" id="huydexuat">Hủy</button>
                        <button type="submit" class="btn btn-success">Duyệt</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

