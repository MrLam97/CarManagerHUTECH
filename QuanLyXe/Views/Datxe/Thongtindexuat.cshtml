@model IEnumerable<QuanLyXe.Models.ThongtinDatxe>

@{
    ViewBag.Title = "Thongtindexuat";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Lịch sử đặt xe</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ngày đặt xe</th>
                        <th>Loại xe</th>
                        <th>Lộ trình đi</th>
                        <th>Lộ trình về</th>
                        <th>Trạng thái đặt</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NGAYDX</td>
                            <td>@item.TENLOAIXE</td>
                            <td>@item.LOTRINHDI</td>
                            <td>@item.LOTRINHVE</td>
                            <td>@item.TENTRANGTHAI</td>
                            <td>
                                <a href="@Url.Action("Duyetdexuat","Datxe",new { id = item.MADX })"><input type="button" class="btn btn-info" value="Xử lý" /></a>
                                <a href="@Url.Action("Suadatxe","Datxe",new { id = item.MADX })"><input type="button" class="btn btn-success" value="Sửa" /></a>
                                <button class="xoadexuat btn btn-danger" data-xoa="@item.MADX">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>


